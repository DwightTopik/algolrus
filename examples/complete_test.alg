алг полный_тест_аттестации;
| Комплексный тест ВСЕХ обязательных возможностей для 1-й аттестации
нач
    | ✅ Типы данных (обязательные: char, integer, boolean)
    число : цел;
    флаг : лог;
    символ : сим;
    строка_переменная : строка;
    массив_чисел : таб[10] цел;
    массив_символов : таб[5] сим;
    
    | Переменные для тестов
    i : цел;
    j : цел;
    k : цел;
    результат : лог;
    temp : цел;
кон
    | ✅ Присваивания и литералы
    число := 42;
    флаг := да;
    символ := 'A';
    строка_переменная := "Привет мир!";
    
    | ✅ Арифметические операции (обязательные: +, –, *, /, div, mod)
    i := 15;
    j := 4;
    число := i + j;      | сложение: 19
    число := i - j;      | вычитание: 11
    число := i * j;      | умножение: 60
    число := i / j;      | деление: 3 (целочисленное)
    число := i div j;    | целочисленное деление: 3
    число := i mod j;    | остаток от деления: 3
    
    | ✅ Унарные операции
    число := +i;         | унарный плюс
    число := -i;         | унарный минус
    
    | ✅ Операции сравнения (обязательные: =, >, <, >=, <=, <>)
    результат := i = j;   | равенство: нет
    результат := i <> j;  | неравенство: да
    результат := i > j;   | больше: да
    результат := i >= j;  | больше или равно: да
    результат := i < j;   | меньше: нет
    результат := i <= j;  | меньше или равно: нет
    
    | ✅ Логические операции и not
    результат := да и нет;     | логическое И: нет
    результат := да или нет;   | логическое ИЛИ: да
    результат := не да;        | логическое НЕ: нет
    результат := не нет;       | логическое НЕ: да
    
    | ✅ Работа с одномерными массивами
    массив_чисел[1] := 100;
    массив_чисел[2] := массив_чисел[1] + 50;
    число := массив_чисел[2];  | число = 150
    
    массив_символов[1] := 'H';
    массив_символов[2] := 'i';
    символ := массив_символов[1];
    
    | ✅ Условный оператор if then [else]
    если i > j то
        вывод("i больше j");
        число := i;
    иначе
        вывод("i не больше j");
        число := j;
    все
    
    | Вложенные условия
    если число > 10 то
        если число > 20 то
            вывод("число больше 20");
        иначе
            вывод("число от 10 до 20");
        все
    все
    
    | ✅ Цикл for (обязательный)
    для i от 1 до 5
        массив_чисел[i] := i * 10;
        вывод("Заполняем массив");
    кц
    
    | ✅ Цикл for с шагом
    для i от 10 до 2 шаг -2
        число := число + i;
    кц
    
    | ✅ Цикл while (обязательный)
    i := 1;
    пока i <= 3
        число := число + i;
        i := i + 1;
    кц
    
    | ✅ Цикл do while (цикл...до)
    i := 1;
    цикл
        число := число * 2;
        i := i + 1;
    до i > 2
    
    | ✅ Операторы break и continue (по желанию)
    для i от 1 до 10
        если i = 3 то
            далее  | continue - пропускаем итерацию
        все
        если i = 7 то
            стоп   | break - прерываем цикл
        все
        массив_чисел[i] := i;
    кц
    
    | ✅ Вложенные циклы
    для i от 1 до 3
        для j от 1 до 2
            k := i * j;
            массив_чисел[k] := k;
        кц
    кц
    
    | ✅ Ввод-вывод (обязательные: Write/WriteLn, Read/ReadLn)
    вывод("Результат вычислений:");
    вывод(число);
    вывод("Массив:");
    для i от 1 до 5
        вывод(массив_чисел[i]);
    кц
    
    | ✅ Системные функции (обязательные: Inc, Dec, Abs)
    увел(число);         | Inc - увеличить на 1
    умен(число);         | Dec - уменьшить на 1
    число := модуль(-25); | Abs - абсолютное значение: 25
    
    | ✅ Сложные выражения со скобками
    число := (i + j) * (i - j);
    результат := (i > 0) и (j < 10) или не флаг;
    число := ((i + j) * 2) / (i - j + 1);
    
    | ✅ Смешанные идентификаторы (русские и латинские)
    russian_var := 100;
    латинская_переменная := 200;
    mixed_переменная := russian_var + латинская_переменная;
    
    | ✅ Передача параметров простых типов по значению (встроенные функции)
    увел(mixed_переменная);
    умен(mixed_переменная);
    temp := модуль(mixed_переменная - 500);
    
    | Финальный вывод
    вывод("=== ТЕСТ ЗАВЕРШЁН УСПЕШНО ===");
    вывод("Все обязательные возможности протестированы:");
    вывод("✅ Типы: цел, лог, сим, строка, массивы");
    вывод("✅ Операции: +, -, *, /, div, mod, =, <>, >, >=, <, <=");
    вывод("✅ Логика: и, или, не");
    вывод("✅ Управление: если-то-иначе-все");
    вывод("✅ Циклы: для-от-до-кц, пока-кц, цикл-до");
    вывод("✅ Операторы: стоп, далее");
    вывод("✅ Функции: вывод, увел, умен, модуль");
    вывод("✅ Массивы: таб[размер] тип");
    вывод("✅ Выражения: скобки, приоритет операций");
    вывод("✅ Идентификаторы: русские и латинские");
кон 