алг демонстрация;
нач
    а : цел;
    б : цел;
    результат : цел;
    флаг : лог;
кон
    а := 10;
    б := 5;
    
    результат := а + б;
    вывод("Сумма:");
    вывод(результат);
    
    результат := а * б;
    вывод("Произведение:");
    вывод(результат);
    
    флаг := а > б;
    если флаг то
        вывод("а больше б");
    иначе
        вывод("а не больше б");
    все
    
    для а от 1 до 3
        вывод("Итерация цикла");
    кц
    
    вывод("Демонстрация завершена");
кон 