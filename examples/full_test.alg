алг полный_тест;
| Комплексный тест всех обязательных возможностей языка
нач
    | Типы данных
    число : цел;
    флаг : лог;
    символ : сим;
    массив : таб[10] цел;
    строка_переменная : строка;
    
    | Переменные для тестов
    i : цел;
    j : цел;
    результат : лог;
кон
    | Тест присваиваний и литералов
    число := 42;
    флаг := да;
    символ := 'A';
    строка_переменная := "Привет мир";
    
    | Тест арифметических операций
    i := 10;
    j := 3;
    число := i + j;      | сложение
    число := i - j;      | вычитание  
    число := i * j;      | умножение
    число := i / j;      | деление
    число := i div j;    | целочисленное деление
    число := i mod j;    | остаток от деления
    
    | Тест унарных операций
    число := +i;         | унарный плюс
    число := -i;         | унарный минус
    
    | Тест операций сравнения
    результат := i = j;   | равенство
    результат := i <> j;  | неравенство
    результат := i > j;   | больше
    результат := i >= j;  | больше или равно
    результат := i < j;   | меньше
    результат := i <= j;  | меньше или равно
    
    | Тест логических операций
    результат := да и нет;     | логическое И
    результат := да или нет;   | логическое ИЛИ
    результат := не да;        | логическое НЕ
    
    | Тест работы с массивами
    массив[1] := 100;
    массив[2] := массив[1] + 50;
    число := массив[2];
    
    | Тест условного оператора
    если i > j то
        вывод("i больше j");
        число := i;
    иначе
        вывод("i не больше j");
        число := j;
    все
    
    | Тест цикла for
    для i от 1 до 5
        массив[i] := i * 2;
        вывод("Элемент массива");
    кц
    
    | Тест цикла for с шагом
    для i от 10 до 2 шаг -2
        число := число + i;
    кц
    
    | Тест цикла while
    i := 1;
    пока i <= 3
        число := число + i;
        i := i + 1;
    кц
    
    | Тест цикла do-while
    i := 1;
    цикл
        число := число * 2;
        i := i + 1;
    пока i <= 2
    
    | Тест операторов break и continue (в циклах)
    для i от 1 до 10
        если i = 3 то
            далее  | continue
        все
        если i = 7 то
            стоп   | break
        все
        число := i;
    кц
    
    | Тест вызовов встроенных функций
    вывод("Результат вычислений");
    вывод(число);
    увел(число);     | Inc
    умен(число);     | Dec
    число := модуль(-5);  | Abs
    
    | Тест сложных выражений со скобками
    число := (i + j) * (i - j);
    результат := (i > 0) и (j < 10) или не флаг;
кон