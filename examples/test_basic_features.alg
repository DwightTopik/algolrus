алг тест_основы;
| Тест основных возможностей языка
нач
    | Типы данных
    число : цел;
    флаг : лог;
    символ : сим;
    массив : таб[5] цел;
    строка_переменная : строка;
кон
    | Тест присваиваний и литералов
    число := 42;
    флаг := да;
    символ := 'A';
    строка_переменная := "Привет";
    
    | Тест арифметических операций
    число := 10 + 3;      | сложение
    число := 10 - 3;      | вычитание  
    число := 10 * 3;      | умножение
    число := 10 / 3;      | деление
    число := 10 div 3;    | целочисленное деление
    число := 10 mod 3;    | остаток от деления
    
    | Тест унарных операций
    число := +10;         | унарный плюс
    число := -10;         | унарный минус
    
    | Тест операций сравнения
    флаг := 10 = 3;       | равенство
    флаг := 10 <> 3;      | неравенство
    флаг := 10 > 3;       | больше
    флаг := 10 >= 3;      | больше или равно
    флаг := 10 < 3;       | меньше
    флаг := 10 <= 3;      | меньше или равно
    
    | Тест логических операций
    флаг := да и нет;     | логическое И
    флаг := да или нет;   | логическое ИЛИ
    флаг := не да;        | логическое НЕ
    
    | Тест работы с массивами
    массив[1] := 100;
    массив[2] := массив[1] + 50;
    число := массив[2];
    
    | Тест условного оператора
    если число > 0 то
        вывод("Число положительное");
    иначе
        вывод("Число не положительное");
    все
    
    | Тест цикла for
    для число от 1 до 3
        вывод("Итерация цикла");
    кц
    
    | Тест цикла while
    число := 1;
    пока число <= 2
        число := число + 1;
    кц
    
    | Тест цикла do-while
    число := 1;
    цикл
        число := число + 1;
    пока число <= 2
    
    | Тест вызовов встроенных функций
    вывод("Результат");
    увел(число);
    умен(число);
    число := модуль(-5);
    
    | Тест сложных выражений со скобками
    число := (10 + 3) * (10 - 3);
    флаг := (число > 0) и (число < 100) или не флаг;
кон 