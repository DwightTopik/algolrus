алг тест_аттестации;
| Тест всех обязательных возможностей для первой аттестации
нач
    | Типы данных (обязательные: char, integer, boolean)
    число : цел;
    флаг : лог;
    символ : сим;
    строка_переменная : строка;
    
    | Переменные для тестов
    i : цел;
    j : цел;
    результат : лог;
кон
    | Присваивания и литералы
    число := 42;
    флаг := да;
    символ := 'A';
    строка_переменная := "Привет мир";
    
    | Арифметические операции (+, –, *, /, div, mod)
    i := 10;
    j := 3;
    число := i + j;      | сложение
    число := i - j;      | вычитание  
    число := i * j;      | умножение
    число := i / j;      | деление
    число := i div j;    | целочисленное деление
    число := i mod j;    | остаток от деления
    
    | Унарные операции
    число := +i;         | унарный плюс
    число := -i;         | унарный минус
    
    | Операции сравнения (=, >, <, >=, <=)
    результат := i = j;   | равенство
    результат := i <> j;  | неравенство
    результат := i > j;   | больше
    результат := i >= j;  | больше или равно
    результат := i < j;   | меньше
    результат := i <= j;  | меньше или равно
    
    | Логические операции и not
    результат := да и нет;     | логическое И
    результат := да или нет;   | логическое ИЛИ
    результат := не да;        | логическое НЕ (not)
    
    | Условный оператор if then [else]
    если i > j то
        вывод("i больше j");
        число := i;
    иначе
        вывод("i не больше j");
        число := j;
    все
    
    | Цикл for
    для i от 1 до 5
        число := число + 1;
        вывод("Итерация цикла");
    кц
    
    | Цикл for с шагом
    для i от 10 до 2 шаг -2
        число := число + i;
    кц
    
    | Цикл while
    i := 1;
    пока i <= 3
        число := число + i;
        i := i + 1;
    кц
    
    | Цикл do while
    i := 1;
    цикл
        число := число * 2;
        i := i + 1;
    до i > 2
    
    | Операторы break и continue (по желанию)
    для i от 1 до 10
        если i = 3 то
            далее  | continue
        все
        если i = 7 то
            стоп   | break
        все
        число := i;
    кц
    
    | Ввод-вывод (Write/WriteLn, Read/ReadLn)
    вывод("Результат вычислений");
    вывод(число);
    
    | Системные функции (Inc, Dec, Abs)
    увел(число);     | Inc
    умен(число);     | Dec
    число := модуль(-5);  | Abs
    
    | Сложные выражения со скобками
    число := (i + j) * (i - j);
    результат := (i > 0) и (j < 10) или не флаг;
    
    вывод("Тест завершён успешно!");
кон 